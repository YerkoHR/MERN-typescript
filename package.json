{
  "name": "mern_training",
  "version": "1.0.0",
  "description": "MERN app training with Redux and Typescript",
  "main": "server.js",
  "engines": {
    "node": "v10.15.0"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Yerko Henriquez",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.19"
  },
  "devDependencies": {
    "@types/react-redux": "^7.0.5"
  }
}
